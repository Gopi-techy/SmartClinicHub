# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/smartclinicHub

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Cloud Storage
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_CONTAINER_NAME=smartclinic-files

# Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@smartclinichub.com

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
ENCRYPTION_KEY=your_aes_encryption_key_32_chars
SESSION_SECRET=your_session_secret

# Emergency Services
EMERGENCY_API_KEY=your_emergency_service_api_key

# Development
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Production
# NODE_ENV=production
# PORT=5000
# FRONTEND_URL=https://yourdomain.com
