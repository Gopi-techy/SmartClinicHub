# SmartClinicHub Frontend Environment Variables (Vite Format)

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000

# Google Gemini AI
VITE_GEMINI_API_KEY=your-gemini-api-key

# Google Analytics
VITE_GA_TRACKING_ID=your-google-analytics-id

# Sentry Error Tracking
VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_EMERGENCY_MODE=true
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# External Services
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Development Configuration
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_HOT_RELOAD=true

# PWA Configuration
VITE_PWA_NAME=SmartClinicHub
VITE_PWA_SHORT_NAME=SmartClinic
VITE_PWA_DESCRIPTION=AI-Powered Healthcare Management Platform
VITE_PWA_THEME_COLOR=#3B82F6
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# Emergency Services
VITE_EMERGENCY_NUMBER=911
VITE_EMERGENCY_API_KEY=your-emergency-api-key

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Real-time Features
VITE_ENABLE_SOCKET_IO=true
VITE_SOCKET_RECONNECTION_ATTEMPTS=5
VITE_SOCKET_RECONNECTION_DELAY=1000

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=86400000
VITE_OFFLINE_MODE=true