# SmartClinicHub Frontend Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Google Gemini AI
REACT_APP_GEMINI_API_KEY=your-gemini-api-key

# Google Analytics
REACT_APP_GA_TRACKING_ID=your-google-analytics-id

# Sentry Error Tracking
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature Flags
REACT_APP_ENABLE_AI_FEATURES=true
REACT_APP_ENABLE_EMERGENCY_MODE=true
REACT_APP_ENABLE_VIDEO_CALLS=false
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true

# External Services
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
REACT_APP_TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Development Configuration
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_HOT_RELOAD=true

# PWA Configuration
REACT_APP_PWA_NAME=SmartClinicHub
REACT_APP_PWA_SHORT_NAME=SmartClinic
REACT_APP_PWA_DESCRIPTION=AI-Powered Healthcare Management Platform
REACT_APP_PWA_THEME_COLOR=#3B82F6
REACT_APP_PWA_BACKGROUND_COLOR=#FFFFFF

# Emergency Services
REACT_APP_EMERGENCY_NUMBER=911
REACT_APP_EMERGENCY_API_KEY=your-emergency-api-key

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Real-time Features
REACT_APP_ENABLE_SOCKET_IO=true
REACT_APP_SOCKET_RECONNECTION_ATTEMPTS=5
REACT_APP_SOCKET_RECONNECTION_DELAY=1000

# Performance
REACT_APP_ENABLE_SERVICE_WORKER=true
REACT_APP_CACHE_DURATION=86400000
REACT_APP_OFFLINE_MODE=true
