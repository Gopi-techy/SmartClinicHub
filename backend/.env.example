# SmartClinicHub Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:4028

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smartclinichub

# JWT Configuration
JWT_SECRET=smartclinic-super-secret-jwt-key-2024-development-secure
JWT_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_REGION=your_aws_region_here
AWS_S3_BUCKET=your_s3_bucket_name_here

# Optional: S3 URL Configuration
AWS_S3_ENDPOINT=https://s3.your_region.amazonaws.com

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@smartclinichub.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+12345678980

# Google Gemini AI
GEMINI_API_KEY=AIzaSyCe8R7PVWdBoZWhhDIS4nJjuzhDZYBi0M0

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SENSITIVE_MAX=20

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# AI Configuration
AI_MAX_PROMPT_LENGTH=10000
AI_CACHE_TIMEOUT=300000
AI_MAX_REQUESTS_PER_HOUR=100
AI_ENABLE_CACHING=true

# Appointment Configuration
DEFAULT_APPOINTMENT_DURATION=30
APPOINTMENT_BUFFER_TIME=15
MAX_ADVANCE_BOOKING=90

# Prescription Configuration
PRESCRIPTION_RX_EXPIRY_DAYS=90
MAX_MEDICATIONS_PER_PRESCRIPTION=10
ALLOW_GENERIC_SUBSTITUTION=true

# File Upload Configuration
MAX_FILES=10

# Emergency Access Configuration
QR_CODE_EXPIRY=86400000
MAX_EMERGENCY_CONTACTS=5

# Health Monitoring Configuration
MAX_VITAL_RECORDS=100
MAX_SYMPTOM_RECORDS=50

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m
AUDIT_RETENTION_DAYS=365

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_CORS=true

# Analytics and Monitoring
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Backup and Maintenance
ENABLE_AUTO_BACKUP=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30