{
  "name": "smartclinichub-backend",
  "version": "1.0.0",
  "description": "SmartClinicHub Backend API - Healthcare platform with AI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testPathPattern=auth",
    "test:emergency": "jest --testPathPattern=emergency",
    "test:ai": "jest --testPathPattern=ai",
    "test:api": "node test-runner.js --all",
    "test:api:auth": "node test-runner.js --auth",
    "test:api:rbac": "node test-runner.js --rbac",
    "test:api:appointments": "node test-runner.js --appointments",
    "build": "echo 'Backend build completed'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docs": "swagger-jsdoc -d swaggerDef.js -o swagger.json",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "healthcare",
    "api",
    "nodejs",
    "mongodb",
    "ai",
    "emergency",
    "telemedicine"
  ],
  "author": "SmartClinicHub Team",
  "license": "MIT",
